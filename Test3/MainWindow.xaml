<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test3"
        xmlns:Models="clr-namespace:Test3.Models" x:Class="Test3.MainWindow"
        mc:Ignorable="d"
        Title="Пользователь: Администратор" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="39*"/>
        </Grid.RowDefinitions>

        <!--<Button Content="Состав" Margin="25,157,372,0" VerticalAlignment="Top" Click="Button_Click_1" Height="30" Grid.Row="1"/>-->
